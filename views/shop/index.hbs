
{{# each products }}
<div class = "row">
   {{# each this}}

   <div class = "col-sm-6 col-md-3">
      <div class = "thumbnail">
         <img src = " " alt = "Generic placeholder thumbnail">
      </div>

      <div class = "caption">
         <h3>{{this.title}}</h3>
         <p>{{this.description}}</p>

         <p>
            <span style="padding-right:20px">${{this.price}}</span>

            <a href = "#" class = "btn btn-default btn-primary pull-right" role = "button">
               Add to cart
            </a>
         </p>

      </div>
   </div>
   {{/each}}

</div>
{{/each}}
